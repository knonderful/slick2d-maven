    <developer>
      <id>slick2d-developers</id>
      <name>Slick 2D developers</name>
      <url>https://bitbucket.org/kevglass/slick/</url>
    </developer>
  </developers>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>org.newdawn.slick.tools.scalar.Scalar</mainClass>
            </manifest>
          </archive>
